        <item name="android:windowActionBar">true</item>

        <item name="android:dropDownItemStyle">@style/CustomDropdownStyle</item>
    </style>
    <style name="CustomDropdownStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
