<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/panelForecastItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardMaxElevation="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/itmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="Sunday, 13 January"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">
            <TextView
                android:id="@+id/tempDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="-11°C"
                android:textSize="28sp"
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/tempDivider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:text="/"
                android:visibility="visible"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tempNightly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="-18°C"
                android:textSize="18sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/itmDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="forecast details..."
            android:textSize="14sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>